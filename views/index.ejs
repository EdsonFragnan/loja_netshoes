<!DOCTYPE html>
<html lang="pt">
  <head>
    <meta charset="utf-8">
    <title>Vitrine NetShoes</title>
    <meta name="description" content="Vitrine de produtos NetShoes">
    <link rel="stylesheet" href="./bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="./stylesheets/style.css" type="text/css" />
    <script src="javascripts/script.js"></script>
    <script src="javascripts/sacola.js"></script>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>

  <body>

    <div id="produtosCarrinho">
      <h2 class="sacola">Sacola</h2>
      <hr />
      <div id="mensagemSacola"></div>
      <div id="produtosSacola"></div>
      <div id="precoTotal">
        <p>SUBTOTAL</p>
        <p id="valorTotal"></p>
      </div>
      <input type="button" class="btn btn-default btnComprarCar" onclick="Compra();" value="COMPRAR" />
    </div>

    <div class="container">
      <div class="row">
        <div id="carrinhoCompras">
          <img src="images/carrinho.jpg" class="imgCarrinho" alt="carrinho"/>
          <div id="contador"></div>
        </div>
      </div>

      <div class="col-xs-12 col-sm-12 col-md-12 row vitrine">
        <hr />
        <% vitrine.forEach(function(produto) { %>
          <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
            <div class="thumbnail <%- produto.id %>">
              <img src="images/corinthians.jpg" class="imagem <%- produto.id %>" alt="Corinthians" style="width:100%">
              <p class="tituloProduto <%- produto.id %>"><%- produto.title %></p>
              <p class="traco">-</p>
              <p class="precoProduto"><span class="valorProduto <%- produto.id %>"><%- produto.price %></span></p>
              <p class="parcelas <%- produto.id %>">ou 3 x <%- produto.currencyFormat %> <%- produto.parcela %></p>
              <button type="button" class="btn btn-default btnComprar btn-lg" data-toggle="modal" data-target="#myModal" id="<%- produto %>" onclick="AddCarrinho(<%=JSON.stringify(produto)%>);">
                Adicionar
              </button>
              <!-- AddCarrinho(<%=JSON.stringify(produto)%>); -->
              <hr />
            </div>
          </div>
        <% }); %>
      </div>
    </div>

    <!--<script>
      $('#carrinhoCompras').click(function() {
        $('#produtosCarrinho').toggle('slide', {direction: 'left'}, 1000);
      });
    </script>-->


    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel"></h4>
          </div>
          <div id="produto"></div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Enciar para sacola</button>
          </div>
        </div>
      </div>
    </div>

  </body>
</html>
